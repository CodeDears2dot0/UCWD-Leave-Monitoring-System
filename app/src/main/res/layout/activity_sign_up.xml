<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFEE9"
    tools:context=".LeaveMonitor"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="89dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="352dp"
        android:layout_height="367dp"
        android:src="@drawable/login_page_image_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leaguespartanbold"
        android:text="@string/snUp"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435" />


    <EditText
        android:id="@+id/editTextEmpName"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/usernpassbgedittext"
        android:drawableStart="@drawable/useredittext_24"
        android:drawablePadding="4dp"
        android:ems="10"
        android:hint="@string/employeeName"
        android:inputType="text"
        android:paddingStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,RtlSymmetry" />

    <EditText
        android:id="@+id/editTextempID"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/usernpassbgedittext"
        android:drawableStart="@drawable/useredittext_24"
        android:drawablePadding="4dp"
        android:ems="10"
        android:hint="@string/empID"
        android:inputType="text"
        android:paddingStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmpName"
        tools:ignore="Autofill,RtlSymmetry" />

    <EditText
        android:id="@+id/editTextemail"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/usernpassbgedittext"
        android:drawableStart="@drawable/user_email"
        android:drawablePadding="4dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextempID"
        tools:ignore="Autofill,RtlSymmetry" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/usernpassbgedittext"
        android:drawableStart="@drawable/passwordedittext_24"
        android:drawablePadding="4dp"
        android:ems="10"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextemail"
        tools:ignore="Autofill,RtlSymmetry" />

    <EditText
        android:id="@+id/editTextrePassword"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/usernpassbgedittext"
        android:drawableStart="@drawable/passwordedittext_24"
        android:drawablePadding="4dp"
        android:ems="10"
        android:hint="@string/rePass"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        app:layout_constraintVertical_bias="0.061"
        tools:ignore="Autofill,RtlSymmetry,VisualLintOverlap" />

    <Button
        android:id="@+id/createbtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#7CC644"
        android:text="@string/create"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>